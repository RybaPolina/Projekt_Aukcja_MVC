@model Auctions.Models.ListingVM

@{
    ViewData["Title"] = "Edytuj aukcję";
}

<h2>Edytuj aukcję</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="IdentityUserId" />
    <input type="hidden" asp-for="IsSold" />

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Aktualne zdjęcie:</label><br />
        <img src="~/Images/@Model.Image?.FileName" alt="Zdjęcie" width="200" />
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
