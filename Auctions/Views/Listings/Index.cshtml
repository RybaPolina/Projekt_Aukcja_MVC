@model List<Auctions.Models.Listing>

@{
    ViewData["Title"] = "Index";
}

<h2>Active Listings</h2>

@foreach(var listing in Model)
{
    <div class="container" style="background-color:white; margin:50px 0; padding:20px;">
        <div class="row">
            <div class="col col-xs-6 col-lg-5">
                <img src="~/Images/@listing.ImagePath" style="max-width:400px; max-height:400px;"/>
            </div>
            <div class="col col-xs-6 col-lg-7">
                <h5><a asp-action="Details" asp-route-id="@listing.Id">@listing.Title</a></h5>
                <div>@listing.Description</div>
                <div>Bid: $@listing.Price.ToString("N2")</div>
                <div>Listed by: @listing.User.Email</div>
            </div>
        </div>
    </div>
}

@if (!Model.Any())
{
    <p>No Active Listings</p>
}
